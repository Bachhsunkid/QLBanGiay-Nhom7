@model Nhom8.QuanlyBanGiay.Admin.Models.Giay

@{
    ViewData["Title"] = "Delete";
}

<h1>Xoá</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã giày
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaGiay)
        </dd>
        <dt class = "col-sm-2">
            Tên giày
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenGiay)
        </dd>
        <dt class = "col-sm-2">
            Kiểu dáng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KieuDang)
        </dd>
        <dt class = "col-sm-2">
            Kích cỡ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KichCo)
        </dd>
        <dt class = "col-sm-2">
            Màu sắc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MauSac)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            Giá nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaNhap)
        </dd>
        <dt class = "col-sm-2">
            Giá gốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaGoc)
        </dd>
        <dt class = "col-sm-2">
            Giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt class = "col-sm-2">
            Phần trăm giảm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhanTramGiam)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>
        <dt class = "col-sm-2">
            Loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Loai)
