@model Nhom8.QuanlyBanGiay.Admin.Models.ChiTietHdb

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ChiTietHdb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHdb" />
            <div class="form-group">
                <label asp-for="MaGiay" class="control-label">Mã giày</label>
                <select asp-for="MaGiay" class="form-control" asp-items="ViewBag.MaGiay"></select>
                <span asp-validation-for="MaGiay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhuyenMai" class="control-label">Khuyến mại</label>
                <input asp-for="KhuyenMai" class="form-control" />
                <span asp-validation-for="KhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Details" asp-controller="ChiTietHdbs" asp-route-id="@Model?.MaHdb">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
