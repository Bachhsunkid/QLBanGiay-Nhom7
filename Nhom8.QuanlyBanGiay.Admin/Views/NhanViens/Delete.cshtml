@model Nhom8.QuanlyBanGiay.Admin.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
}

<h1>Xoá</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã nhân viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNv)
        </dd>
        <dt class = "col-sm-2">
            Tài khoản
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>
        <dt class = "col-sm-2">
            Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class = "col-sm-2">
            Giới tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class = "col-sm-2">
            Họ tên nhân viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTenNv)
        </dd>
        <dt class = "col-sm-2">
            Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
            SĐT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class = "col-sm-2">
            Chức vụ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
        <dt class = "col-sm-2">
            Lương
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Luong)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng công việc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TinhTrangCongViec)
        </dd>
    </dl>

    <form style="margin-bottom:20px" asp-action="Delete">
        <input type="hidden" asp-for="MaNv" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Home">Quay lại</a>
    </form>
</div>
